@model Scrubberij_2.Models.ShopViewModels.ShopIndex

<h2>@Html.DisplayFor(model => model.Car.Type) @Html.DisplayFor(model => model.Car.Type)</h2>
<span>@Html.DisplayFor(model => model.Car.Prijs)</span>
<hr />

<div class="row">
    <div class="col-md-3">
        <img src="#" alt="Alternate Text" style="height: 200px;" class="img-responsive" />
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-12">
                <ul>
                    <!--Gebruik ASP-for -->
                    <li>
                        <label style="display: block;">@Html.DisplayNameFor(model => model.Car.Bouwjaar)</label>
                        <span>@Html.DisplayFor(model => model.Car.Bouwjaar)</span>
                    </li>
                    <li>
                        <label style="display: block;">@Html.DisplayNameFor(model => model.Car.Kilometerstand)</label>
                        <span>@Html.DisplayFor(model => model.Car.Kilometerstand)</span>
                    </li>
                    <li>
                        <label style="display: block;">@Html.DisplayNameFor(model => model.Car.Brandstof)</label>
                        <span>@Html.DisplayFor(model => model.Car.Brandstof)</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <h3>Comments</h3>
    <hr />

    <form asp-action="ViewSingleCar" asp-controller="Shop" method="post">
        <div class="form-horizontal">
            <div class="form-group">
                <input asp-for="Comment.Voornaam" placeholder="Voornaam" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Comment.Achternaam" placeholder="Achternaam" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Comment.Email" placeholder="Email" class="form-control" />
            </div>
            <div class="form-group">
                <textarea asp-for="Comment.Tekst" placeholder="Comment sectie" class="form-control" ></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" />
            </div>
        </div>
    </form>

    @foreach (var comment in Model.Comments)
    {
        <div class="row">
            <div class="col-md-6">
                <span>@Html.DisplayFor(i => comment.Voornaam)</span>
                <span>@Html.DisplayFor(i => comment.Achternaam)</span>
                <span>@Html.DisplayFor(i => comment.Email)</span>
            </div>
        </div>
    }

</div>